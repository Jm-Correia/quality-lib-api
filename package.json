{
    "name": "quality-lib-api",
    "version": "1.0.0",
    "main": "server.ts",
    "scripts": {
        "start": "node dist/main/server.js",
        "dev:server": "ts-node-dev --inspect -r tsconfig-paths/register --respawn --ignore node_modules --no-notify src/main/server.ts",
        "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files",
        "test": "jest",
        "lint": "eslint '*/**/*.{js,ts}' --quiet --fix"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts}": [
            "eslint --fix"
        ]
    },
    "repository": "https://github.com/Jm-Correia/quality-lib-api.git",
    "author": "JO√ÉO MARCOS CORREIA <joao.marcos.correia@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.10.3",
        "@babel/core": "^7.10.3",
        "@babel/node": "^7.10.3",
        "@babel/plugin-proposal-class-properties": "^7.10.1",
        "@babel/plugin-proposal-decorators": "^7.10.3",
        "@babel/preset-env": "^7.10.3",
        "@babel/preset-typescript": "^7.10.1",
        "@types/axios": "^0.14.0",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.8",
        "@types/jest": "^26.0.15",
        "@types/mongoose": "^5.7.37",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^4.5.0",
        "@typescript-eslint/parser": "^4.5.0",
        "babel-plugin-module-resolver": "^4.0.0",
        "babel-plugin-transform-typescript-metadata": "^0.3.0",
        "eslint": "6.8.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-import-resolver-typescript": "^2.0.0",
        "eslint-plugin-import": "^2.21.2",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.3.0",
        "jest": "^26.6.1",
        "lint-staged": "^10.4.0",
        "prettier": "^2.0.5",
        "ts-jest": "^26.4.3",
        "ts-node": "^9.0.0",
        "ts-node-dev": "^1.0.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.0.3"
    },
    "dependencies": {
        "axios": "^0.21.0",
        "cors": "^2.8.5",
        "date-fns": "^2.16.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-async-errors": "^3.1.1",
        "mongoose": "^5.10.11",
        "reflect-metadata": "^0.1.13",
        "uuid": "^8.3.1"
    }
}
